<div class="login" id="ds">
    <div class="login-triangle"></div>
    <h2 class="login-header">Log in</h2>
   
    <form class="login-container" method="POST" action="/login">
        <input type="text" placeholder="Username" name="username" {{#if error}}value="{{username}}"
            class="border-danger" {{/if}} required>
        <input type="password" placeholder="Password" name="password" {{#if error}}value="{{password}}"
            class="border-danger" {{/if}} required>
        <input type="hidden" name="url" id="url" value="{{#if wasRedirect}}/poster{{else}}{{redirect}}{{/if}}">

        <input type="submit">
    </form>
</div>
<div class="center"><a href="/create-account">Crear una cuenta</a></div>
